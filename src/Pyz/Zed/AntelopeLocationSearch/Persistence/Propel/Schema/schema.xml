<entity name="PyzAntelopeLocationSearch" namespace="Orm\Zed\AntelopeLocationSearch\Persistence" table="pyz_antelope_location_search">
    <column name="id_antelope_location_search" type="INTEGER" primaryKey="true" autoIncrement="true"/>
    <column name="fk_antelope_location" type="INTEGER"/>
    <column name="name" type="VARCHAR" size="255"/>
    <column name="location" type="VARCHAR" size="255"/>

    <behavior name="synchronization">
        <parameter name="resource" value="antelope_location"/>
        <parameter name="queue" value="sync.search"/>
        <parameter name="key_suffix_column" value="fk_antelope_location"/>
    </behavior>
</entity>
