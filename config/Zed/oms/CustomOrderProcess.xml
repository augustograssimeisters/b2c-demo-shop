<?xml version="1.0"?>
<statemachine
    xmlns="spryker:oms-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:oms-01 http://static.spryker.com/oms-01.xsd">

    <process name="CustomOrderProcess" main="true">
        <states>
            <state name="new" />
            <state name="paid" />
            <state name="shipped" />
            <state name="canceled" />
            <state name="closed" />
        </states>

        <transitions>
            <transition condition="Oms/IsPaymentAuthorized" happy="true">
                <source>new</source>
                <target>paid</target>
                <event>authorize_payment</event>
            </transition>

            <transition happy="true">
                <source>paid</source>
                <target>shipped</target>
                <event>ship_order</event>
            </transition>

            <transition happy="true">
                <source>shipped</source>
                <target>closed</target>
                <event>close_order</event>
            </transition>

            <transition>
                <source>new</source>
                <target>canceled</target>
                <event>cancel_order</event>
            </transition>
        </transitions>

        <events>
            <event name="authorize_payment" onEnter="true" command="Oms/AuthorizePayment" />
            <event name="ship_order" manual="true" command="Oms/ShipOrder" />
            <event name="cancel_order" manual="true" />
            <event name="close_order" timeout="7 days" />
        </events>
    </process>
</statemachine>
